<Window x:Class="SchedulingAssistantCSharp.WorkStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Work Stats" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="StatsPanel" Orientation="Vertical"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Start Date:" Margin="5"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>
            <Label Content="End Date:" Margin="5"/>
            <DatePicker x:Name="EndDatePicker" Margin="5"/>
            <Button Content="Update" Click="UpdateStats_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
